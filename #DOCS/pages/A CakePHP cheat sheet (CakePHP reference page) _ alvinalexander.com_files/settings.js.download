var bannerboy = bannerboy || {};

/* Settings
================================================= */
bannerboy.settings = function(banner) {
	var corner_1 = bannerboy.createElement({backgroundColor: "#ff0000", left: -51, top: 136, width: 2, height: 2, parent: banner});
	var corner_2 = bannerboy.createElement({backgroundColor: "#ff0000", left: 251, top: 108, width: 1, height: 1, parent: banner});
	var corner_3 = bannerboy.createElement({backgroundColor: "#ff0000", left: 258, top: 334, width: 2, height: 2, parent: banner});
	var corner_4 = bannerboy.createElement({backgroundColor: "#ff0000", left: -53, top: 335, width: 2, height: 1, parent: banner});
	
	TweenMax.set(corner_1, {opacity: 0});
	TweenMax.set(corner_2, {opacity: 0});
	TweenMax.set(corner_3, {opacity: 0});
	TweenMax.set(corner_4, {opacity: 0});

	return {
		widthFactor: 1.3,
		heightFactor: 0.3,
		transformOrigin: "50%, 50%",
		corners: [
			corner_1,
			corner_2,
			corner_3,
			corner_4
		]
	}
}